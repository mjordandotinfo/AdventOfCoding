{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
      ],
      "rules": {
        // Example: you can relax or tighten these as you like
        "@typescript-eslint/no-unused-vars": [
          "warn",
          { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
        ]
      }
    },
    {
      "files": ["*.js"],
      "env": {
        "node": true
      },
      "extends": ["eslint:recommended", "prettier"]
    }
  ]
}
